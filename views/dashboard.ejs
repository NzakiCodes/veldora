          <label for="">
            <input type="text" required/>
            <p class="float">Collection Name</p>
          </label>
          <label for="">
            <textarea name="" id="" cols="30" rows="10" placeholder="A brief description of the collection" required></textarea>
          </label>
          <div class="form__select">
            <label for="">
              <p>Input Title</p>
              <input type="text" required/>
              </label>
              <label for="">
              <select name="" id="">
                <option value="text">Text</option>
              </select>
            </label>
          </div>
          <div class="button-sect">
              <button class="close-modal-btn">Cancel</button>
              <button type="submit">Create</button>
          </div>
        </form>
