
<body>
  <script defer src="/scripts/jquery@3.4.1.js"></script>
    <script defer src="/scripts/scroll.js"></script>
        <main class="flex">
          <%- include('partials/aside', {active: ""}) %>
          <div class="navbar_back"></div>
          <article class="dashboard">
            <div class="dashboard__top">
                    <div class="dashboard__nav">
                        <h3>Collection: <%- collection.title %> </h3>
                      
                        <div class="dashboard__nav_btns">
                              <button class="button button--trans"><a href="/settings/"></a></button>
                          </div>
                    </div>
                      
                      <div class="bottom">
                        <h5>Description</h5>
                        <p><%- collection.desc %> </p>
                        <h5 class="margin_top--30">Link</h5>
                        <div class="row">
                          <p id="collection-link"><%- `${process.env.APP_BASE_URL}/collections/send/collection.collectionID` %> </p>
                          <button data-target="#collection-link" class="button button--trans copyBtn">
                            <i class="ri-clipboard-line"></i>
                          </button>
                        </div>
                    </div>
            </div>
            <div class="dashboard__search_sect">
              <div class="dashboard__search_bar">
                <button class="button button--trans button--with_dropdown dashboard__filter_btn icon__menu "><i class="ri-equalizer-line"></i>
                  <ul class="dropdown">
                    <div>
                      <p>Search By</p>
                    <li><label>Title</label>
                    <input type="checkbox"></li>
                    <li><label>Description</label>
                      <input type="checkbox"></li>
                    </div>
                 
                  </ul>
                </button>
                <input class="dashboard__search" type="search" name="dashboard_search" id="dashboard_search" placeholder="Search collection">
              </div>
            </div>
                <div>
                  <% if (collection.entries.length === 0) { %>
                   
                    <span class="no-collection-sign">
                      <img src="/assets/img/no_data.svg"width="200px" alt="no-collection-img"  />
                      <p>No entries yet...</p>
                    </span>
                    
                    <% } else { %>
                      <table class="table-bottom">
                        <thead>
                           <tr>
                             <% keys.forEach(key => { %>
                              <th><%- key %> </th>
                             <% }) %>
                           </tr>
                        </thead>
                        <tbody>
                            <% for( let count = 0; count < collection.entries.length; count++ ) { %>
                              <tr>
                                <% collection.entries[count].forEach(item => { %>
                                  <td><%- item %> </td>
                                <% }) %>
                              </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <% } %>
                </div>
            </article>
        </main>

        <script src="/scripts/copy.js"></script>